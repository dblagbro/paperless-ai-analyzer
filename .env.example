# Paperless AI Analyzer - Environment Variables
# Copy this file to .env and configure as needed

# Paperless API Configuration (Required)
PAPERLESS_API_BASE_URL=http://paperless-web:8000
PAPERLESS_API_TOKEN=your_token_here

# Polling Configuration
POLL_INTERVAL_SECONDS=30

# Analysis Configuration
BALANCE_TOLERANCE=0.01
FORENSICS_DPI=300

# LLM Integration (Optional)
LLM_ENABLED=false
# LLM_PROVIDER=anthropic
# LLM_API_KEY=your_anthropic_key_here
# LLM_MODEL=claude-3-5-sonnet-20241022

# File Paths
ARCHIVE_PATH=/paperless/media/documents/archive
STATE_PATH=/app/data/state.json
PROFILES_DIR=/app/profiles

# Web UI
WEB_UI_ENABLED=true
WEB_HOST=0.0.0.0
WEB_PORT=8051
